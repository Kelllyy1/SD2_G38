String readFromSerial(HardwareSerial &serial) {


    String receivedData = "";

    // Take the semaphore before accessing the serial line
    
    while (serial.available()) {
        char c = serial.read();

        if (c == '\n' || c == '\r') {
            break;  // Stop reading at newline or carriage return
        }

        receivedData += c;
        delay(2);  // Use delay to prevent task starvation
    }
    receivedData.trim();  // Remove unwanted spaces or newline chars


    

    return receivedData;
}



bool waitForAck(HardwareSerial *serialPort) {

    String serial_number;
    String receivedData;

    if (serialPort == &Serial1) {
        serial_number = "serial1";
    } else if (serialPort == &Serial2) {
        serial_number = "serial2";
    } 
    

    unsigned long startTime = millis();
    // Serial.println("Sent: PING to " + serial_number);
    while (millis() - startTime < ACK_TIMEOUT) {
        WriteFromUART(serialPort, "PING");
        vTaskDelay(20 / portTICK_PERIOD_MS); 
        String receivedData = ReadFromUART(serialPort);
        if (receivedData == "Available") {
            Serial.println("responded with available: ");
            return true;
        }
        else {
          // Serial.println("Received Data after sending PING (waiitng for avaiable) from : " + serial_number  + receivedData);
        }
    }
    Serial.println("did not respond in time.");
    return false;
}


bool peekOldestData(QueueHandle_t queue, char *buffer, size_t bufferSize) {
    if (uxQueueMessagesWaiting(queue) == 0) {
        Serial.println("Queue is empty, nothing to peek.");
        return false;
    }

    // Peek at the oldest message without removing it
    if (xQueuePeek(queue, &buffer, 0) == pdTRUE) {
        Serial.print("Peeked Data: ");
        Serial.println(buffer);
        return true;
    } else {
        Serial.println("Failed to peek data.");
        return false;
    }
}


String ReadFromUART(HardwareSerial *serialPort) {
    String receivedData = "";
    bool messageStarted = false;
    unsigned long startTime = millis();
    const unsigned long timeout = 2000;  // 2 seconds max

    while (millis() - startTime < timeout) {
        if (serialPort->available()) {
            char c = serialPort->read();
            startTime = millis();  // Reset timeout on activity

            if (c == '<') {
                receivedData = "";
                messageStarted = true;
                Serial.println("Received starter UART:");
                continue;
            }

            if (messageStarted) {
                if (c == '>') {
                    Serial.println("Received ender UART:");
                    Serial.println("Returning UART " + receivedData);
                    return receivedData;
                }
                receivedData += c;
            }
        } else {
            delay(2);  // Small wait before checking again
        }
    }

    Serial.println("Timeout waiting for complete message from uart!");
    return "";  // Timeout or no complete message
}



void WriteFromUART(HardwareSerial *serial, const char *input) {
    uint16_t length = strlen(input);
    // Serial.println(String(input));

    const uint16_t maxChunkSize = 64;
    uint16_t numChunks = (length + maxChunkSize - 1) / maxChunkSize;
    // Serial.println("Total length: " + String(length) + ", Number of chunks: " + String(numChunks));

    for (uint16_t chunk = 0; chunk < numChunks; chunk++) {
        uint16_t startIdx = chunk * maxChunkSize;
        uint16_t endIdx = (chunk + 1) * maxChunkSize;
        if (endIdx > length) {
            endIdx = length;
        }

        uint16_t chunkLength = endIdx - startIdx;
        // Serial.println("Chunk " + String(chunk) + " startIdx: " + String(startIdx) + " endIdx: " + String(endIdx) + " chunkLength: " + String(chunkLength));

        if (chunk == 0) {
            serial->write('<');  // Use -> for pointer access
        }

        for (uint16_t i = startIdx; i < endIdx; i++) {
            // delay(2);
            serial->write(input[i]);
            // Serial.println("Sending byte: " + String(input[i]));
        }

        if (chunk == numChunks - 1) {
            serial->write('>');
        }

        delay(10); // Optional delay
    }
    // if (serial == nullptr || input == nullptr) return;

    // serial->write('<');               // Start marker
    // serial->write((const uint8_t *)input, strlen(input));  // Send message
    // serial->write('>');               // End marker
}


String ReadFromExtender(uint8_t channel) {
    String receivedData = "";  
    bool messageStarted = false;
    unsigned long startTime = millis();  
    const unsigned long timeout = 2000;  // 2 seconds max

    while (millis() - startTime < timeout) {
        if (i2cuart.available(channel)) {
            char c = i2cuart.read(channel);
            // Serial.println(c);
            startTime = millis();  // Reset timeout on activity

            if (c == '<') {
                receivedData = "";
                messageStarted = true;
                Serial.println("Received starter Extender:");
                continue;
            }

            if (messageStarted) {
                if (c == '>') {
                    Serial.println("Received ender Extender:");
                    Serial.println("Returning " + receivedData);
                    return receivedData;
                }
                receivedData += c;
            }
        } else {
            // Only wait a little before checking again
            delay(2);
        }
    }

    Serial.println("Timeout waiting for complete message from extender!");
    return "";  // Timeout or no complete message
}





void EncodeString(const char *input, uint16_t *output, uint16_t length) {
    for (int i = 0; i < length; i++) {
        output[i] = (uint16_t)input[i];  // Convert character to ASCII integer
    }
}




void WriteFromExtender(uint8_t channel, const char *input) {
    uint16_t length = strlen(input);
    uint16_t encoded[length];  
    EncodeString(input, encoded, length);
    Serial.println(String(input));

    // Define the maximum chunk size
    const uint16_t maxChunkSize = 64;

    // Calculate how many chunks are needed, rounding up to account for any remaining bytes
    uint16_t numChunks = (length + maxChunkSize - 1) / maxChunkSize;
    Serial.println("Total length: " + String(length) + ", Number of chunks: " + String(numChunks));

    // Send the data in chunks
    for (uint16_t chunk = 0; chunk < numChunks; chunk++) {
        // Calculate start and end indices for each chunk
        uint16_t startIdx = chunk * maxChunkSize;
        Serial.println("Calcualte endIdx, chunk : " + String(chunk) + "maxChunkSize :" + String(maxChunkSize));
        uint16_t endIdx = (chunk + 1) * maxChunkSize;

        // Ensure that endIdx does not exceed the actual length of the input
        if (endIdx > length) {
            endIdx = length;
        }
        Serial.println("Overall length of input: " + String(length));
        uint16_t chunkLength = endIdx - startIdx;
        Serial.println("Chunk " + String(chunk) + " startIdx: " + String(startIdx) + " endIdx: " + String(endIdx) + " chunkLength: " + String(chunkLength));

        if (chunk == 0) {
            // First chunk starts with '<'
            i2cuart.write(channel, '<');
        }

        // Send the chunk data
        for (uint16_t i = startIdx; i < endIdx; i++) {
            i2cuart.write(channel, encoded[i]); // Send encoded bytes
            Serial.println("Sending byte: " + String(char(encoded[i])));
        }

        if (chunk == numChunks - 1) {
            // Last chunk ends with '>'
            i2cuart.write(channel, '>');
        }

        delay(10); // Optional delay between chunks
    }
}






String WaitForDataExtender(uint8_t channel) {

    String channel_name;

    if (channel == CH_A) {
        channel_name = "CH_A";
    } else if (channel == CH_B) {
        channel_name = "CH_B";
    } 


    String listen;
    String receivedJson;
    listen = "";
    unsigned long startTime = millis();  // Record the start time
    while (true) {

    Serial.println("Reading from extender for waitfordata function");
    listen = ReadFromExtender(channel); 
    
    if (listen != "PING" && listen != "") {
        Serial.println("Did not receive PING, instead received: " + listen + " from " + channel_name);
        receivedJson = listen;
        return receivedJson;
    }


    // Print status every time a PING is still being received
    Serial.println("receiving" + listen + " PING after Available was sent to " + channel_name);

    // Check if the 500 ms timeout has passed
    if (millis() - startTime >= WAITFORDATA_TIMEOUT) {
        Serial.println("Timeout reached, stopping looking for Available loop.");
        return "no data";
    }
    WriteFromExtender(channel, "Available");
    vTaskDelay(30 / portTICK_PERIOD_MS); // 
      
  }


    
}





bool WaitForAckExtender(uint8_t channel) {

    String channel_name;

    if (channel == CH_A) {
        channel_name = "CH_A";
    } else if (channel == CH_B) {
        channel_name = "CH_B";
    } 
    

    unsigned long startTime = millis();
    Serial.println("Sent: PING to " + channel_name);
    while (millis() - startTime < ACK_TIMEOUT) {
        WriteFromExtender(channel, "PING");
        vTaskDelay(10 / portTICK_PERIOD_MS);
        Serial.println("Reading from extender for waitforack funciton");
        String receivedData = ReadFromExtender(channel);
        if (receivedData == "Available") {
            Serial.println(channel_name+ "responded with available: ");
            return true;
        }

        else {
          Serial.println("Received Data after sending PING (waiitng for avaiable) from : " + channel_name + receivedData);
        }
    }
    Serial.println(channel_name + "did not respond in time with an Available.");
    return false;
}



bool ListenForPingExtender(uint8_t channel) {
    String listen = "";
    unsigned long startTime = millis();  
    String channel_name;

    // Identify the channel
    if (channel == CH_A) {
        channel_name = "CH_A";
    } else if (channel == CH_B) {
        channel_name = "CH_B";
    } 

    
    
    while (millis() - startTime < LISTEN_TIMEOUT) {  
        // Serial.println("Reading from extender for listenforping function");
        listen = ReadFromExtender(channel);  
        listen.trim();  
        
        // Serial.println("Listening for PING from " + channel_name + ": [" + listen + "]");  

        if (listen == "PING") {
            Serial.println("Received PING from" + channel_name);
            WriteFromExtender(channel, "Available");

            
            return true;  
        }

        vTaskDelay(10 / portTICK_PERIOD_MS); 
    }

    Serial.println("Did not receive PING within timeout from " + channel_name);
        
    

    return false;
}
